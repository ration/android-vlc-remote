<!--LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:orientation="vertical" -->

 
    <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/seekcontrol_widget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        
        
        <ImageButton
            android:id="@+id/seekcontrol_clickicon"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/icon" />
        

        <ImageButton
            android:id="@+id/control_seek_backward"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/context_seek_backward"
            android:scaleType="center"
            android:src="@drawable/ic_media_seek_backward" />

        <ImageButton
            android:id="@+id/control_play"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/context_play"
            android:scaleType="center"
            android:src="@drawable/ic_appwidget_music_play" />

        <ImageButton
            android:id="@+id/control_next"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/context_next"
            android:scaleType="center"
            android:src="@drawable/ic_appwidget_music_next" />

        <ImageButton
            android:id="@+id/control_seek_forward"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/context_seek_forward"
            android:scaleType="center"
            android:src="@drawable/ic_media_seek_forward" />
    </LinearLayout>

<!--  /LinearLayout-->